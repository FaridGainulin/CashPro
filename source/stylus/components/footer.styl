.footer
  background-color #303234

  &__container
    display: flex
    align-items: center
    flex-direction: column
    gap: 10px
    padding 15px 0
    color: #E5E5E5
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between
      padding 20px 0
    +above($breakpoints.md)
      padding 30px 0
    +above($breakpoints.xxl)
      padding 42px 0 39px 0

  &__logo
    width 140px
    height: auto
    +above($breakpoints.sm)
      width 170px
    +above($breakpoints.md)
      width 240px
    +above($breakpoints.xxl)
      width 280px

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      align-items: center
      text-align: center
      gap: 5px
    +above($breakpoints.md)
      gap: 12px
    +above($breakpoints.xxl)
      gap: 15px

  &__block
    display: none
    +above($breakpoints.sm)
      display: block

  &__privacy
    cursor pointer
    text-decoration: underline

  &__connection
    display: flex
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      gap: 10px
    +above($breakpoints.md)
      gap: 13px

  &__connection-icon
    width 10px
    height: 10px
    +above($breakpoints.sm)
      width 14px
      height: 14px
    +above($breakpoints.md)
      width 17px
      height: 17px
    +above($breakpoints.xxl)
      width 19px
      height: 19px
