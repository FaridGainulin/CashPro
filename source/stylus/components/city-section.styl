.city-section
  // background-image: url('../images/main-section-bg.jpg')
  // background-repeat: no-repeat
  // background-size: cover
  // background-position: center
  background-color #E5E5E5

  &__container
    position relative
    z-index 1
    padding 20px 0 0 0
    text-align: center
    text-transform: uppercase
    +above($breakpoints.sm)
      text-align: start
      padding 50px 0 50px 0
    +above($breakpoints.md)
      padding 80px 0 80px 0
    +above($breakpoints.xxl)
      padding 121px 0 120px 0

  &__title
    line-height 100% !important

  &__sub-title
    padding 5px 0 10px 0
    line-height 117% !important
    +above($breakpoints.sm)
      padding 10px 0 35px 0
    +above($breakpoints.md)
      padding 10px 0 38px 0
    +above($breakpoints.xxl)
      padding 10px 0 43px 0

  &__text
    position relative
    width 100%
    background-color $color-green
    padding: 8px 36px 8px 53px;
    color: #E5E5E5
    border-radius: 20px
    +above($breakpoints.sm)
      border-radius: 30px
      padding: 11px 0 11px 86px;
      width 310px
    +above($breakpoints.md)
      border-radius: 40px;
      width: 380px;
      padding: 12px 0 12px 100px;
    +above($breakpoints.xxl)
      border-radius: 50px
      width 420px
      padding 13px 0 12px 100px

  &__icon
    position: absolute
    width: 45px;
    height: auto;
    top: -22px;
    left: -1px;
    +above($breakpoints.sm)
      width: 66px;
      top: -33px;
      left: -1px;
    +above($breakpoints.md)
      width: 80px;
      top: -38px;
      left: -1px;
    +above($breakpoints.xxl)
      width: 87px;
      top: -41px;
      left: -1px;

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    border-radius: 15px
    background-color #303234
    padding 14px
    margin-top 15px
    +above($breakpoints.sm)
      margin-top 20px
      width 310px
      gap: 7px
      border-radius: 20px
      padding 20px 15px
    +above($breakpoints.md)
      margin-top 25px
      width 380px
      gap: 9px
      border-radius: 25px
      padding 25px 20px
    +above($breakpoints.xxl)
      margin-top 31px
      border-radius: 30px
      width 420px
      height: 260px
      padding 31px 25px

  &__img
    width 400px
    height: auto
    margin: 0px 0 0 -88px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      width: 930px;
      bottom: 0px;
      left: 15px;
    +above($breakpoints.md)
      width: 1240px;
      left: -10px;
    +above($breakpoints.xxl)
      width 1657px
      left: -100px
