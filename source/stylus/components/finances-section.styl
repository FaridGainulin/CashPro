.finances-section
  // background-image: url('../images/finances-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #fff

  &__container
    position relative
    z-index 1
    padding 20px 0 20px 0
    +above($breakpoints.sm)
      padding 50px 0 60px 0
    +above($breakpoints.md)
      padding 80px 0 90px 0
    +above($breakpoints.xxl)
      padding 124px 0 145px 0

  &__headphone-img
    position: absolute
    width: 120px;
    height: auto;
    top: 19px;
    left: -81px;
    +above($breakpoints.sm)
      width: 129px;
      top: 56px;
      left: -120px;
    +above($breakpoints.md)
      width: 159px;
      top: 86px;
      left: -203px;
    +above($breakpoints.xxl)
      width 229px
      top: 110px
      left: -292px

  &__gamepad-img
    position: absolute
    width: 150px;
    height: auto;
    bottom: 24px;
    left: -139px;
    +above($breakpoints.sm)
      width: 280px;
      bottom: 33px;
      left: -241px;
    +above($breakpoints.md)
      width: 430px;
      bottom: 21px;
      left: -362px;
    +above($breakpoints.xxl)
      width 588px
      bottom: 21px
      left: -561px

  &__logo-img
    position: absolute
    width: 59px;
    height: auto;
    bottom: 352px;
    right: -23px;
    +above($breakpoints.sm)
      width: 329px;
      bottom: 219px;
      right: -356px;
    +above($breakpoints.md)
      width: 459px;
      bottom: 280px;
      right: -493px;
    +above($breakpoints.xxl)
      width 679px
      bottom: 308px
      right: -750px

  &__title,
  &__sub-title
    text-align: center

  &__sub-title
    padding 5px 0 15px 0
    +above($breakpoints.sm)
      padding 15px 0 25px 0
    +above($breakpoints.md)
      padding 15px 0 30px 0
    +above($breakpoints.xxl)
      padding 16px 0 41px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    width 280px !important
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    border-radius: 15px
    background-color #E5E5E5
    padding 15px 5px
    text-align: center
    +above($breakpoints.sm)
      padding 20px 10px 20px 20px
      text-align: start
      border-radius: 20px
      align-items: flex-start
      width 235px !important
    +above($breakpoints.md)
      padding 30px 10px 30px 30px
      border-radius: 25px
      width 308px !important
    +above($breakpoints.xxl)
      padding 40px 10px 40px 44px
      border-radius: 30px
      width 380px !important
      height: 170px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    text-align: center
    +above($breakpoints.sm)
      margin-top 10px
      text-align: end
      flex-direction: row
      justify-content flex-end
      gap: 10px
    +above($breakpoints.md)
      margin-top 23px
      gap: 20px

  &__bottom-text-title
    padding-bottom 10px

  &__form
    position relative
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    background-color #E5E5E5
    border-radius: 15px
    padding 15px 10px
    +above($breakpoints.sm)
      overflow hidden
      padding 15px 15px 15px 10px
      border-radius: 20px
      width 480px
      align-items: flex-end
      gap: 7px
    +above($breakpoints.md)
      padding 25px 20px 25px 10px
      border-radius: 25px
      width 636px
      gap: 9px
    +above($breakpoints.xxl)
      padding 34px 28px 32px 10px
      border-radius: 30px
      width 780px
      height: 264px
    input,
    button
      width 280px !important
      +above($breakpoints.sm)
        width 240px !important
      +above($breakpoints.md)
        width 300px !important
      +above($breakpoints.xxl)
        width 350px !important

  &__bottom-icon
    position: absolute
    width: 140px;
    height: auto;
    bottom: 123px;
    left: 261px;
    +above($breakpoints.sm)
      width 250px
      bottom: 0
      left: 0
    +above($breakpoints.md)
      width 345px
      bottom: 0
      left: 0
    +above($breakpoints.xxl)
      width 435px
      bottom: 0
      left: 0
