.header
  background-color #303234

  &__container
    display: flex
    justify-content space-between
    align-items: center
    padding 15px 0 15px 0
    color: #E5E5E5
    +above($breakpoints.sm)
      padding 20px 0 20px 0
    +above($breakpoints.md)
      padding 30px 0 30px 0
    +above($breakpoints.xxl)
      padding 37px 0 44px 0

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 15px
    +above($breakpoints.md)
      gap: 30px
    +above($breakpoints.xxl)
      gap: 46px

  &__logo
    width 140px
    height: auto
    +above($breakpoints.sm)
      width 170px
    +above($breakpoints.md)
      width 240px
    +above($breakpoints.xxl)
      width 280px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 8px
    +above($breakpoints.md)
      gap: 13px
    +above($breakpoints.xxl)
      gap: 18px

  &__line
    +above($breakpoints.sm)
      width 2px
      height: 40px
      background-color #E5E5E5
      border-radius: 2px
    +above($breakpoints.md)
      height: 46px
    +above($breakpoints.xxl)
      height: 53px

  &__connection
    display: flex
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      gap: 10px
    +above($breakpoints.md)
      gap: 13px

  &__connection-icon
    width 10px
    height: 10px
    +above($breakpoints.sm)
      width 14px
      height: 14px
    +above($breakpoints.md)
      width 17px
      height: 17px
    +above($breakpoints.xxl)
      width 19px
      height: 19px
