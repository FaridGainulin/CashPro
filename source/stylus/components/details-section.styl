.details-section
  // background-image: url('../images/details-section-bg.jpg')
  // background-repeat: no-repeat
  // background-position: center
  // background-size: cover
  background-color #E5E5E5

  &__container
    position relative
    padding 20px 0 1px 0
    +above($breakpoints.sm)
      padding 40px 0 40px 0
    +above($breakpoints.md)
      padding 80px 0 80px 0
    +above($breakpoints.xxl)
      padding 122px 0 124px 0

  &__title
    text-align: center
    padding 0 0 15px 0
    +above($breakpoints.sm)
      padding 0 0 25px 0
    +above($breakpoints.md)
      padding 0 0 35px 0
    +above($breakpoints.xxl)
      padding 0 0 45px 0

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 20px

  &__card
    width 280px !important
    +above($breakpoints.sm)
      width 235px !important
    +above($breakpoints.md)
      width 308px !important
    +above($breakpoints.xxl)
      width 380px !important

  &__card-img
    width 100%
    height: auto
    border-radius: 15px
    +above($breakpoints.sm)
      border-radius: 20px
    +above($breakpoints.md)
      border-radius: 25px
    +above($breakpoints.xxl)
      border-radius: 30px
